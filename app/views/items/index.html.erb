<% provide(:title, "Shop") %>

<section class="items">
  <div class="list-group">
    <div class="row">
      <% @items.each do |item| %>
        <div class="each-item col-md-4">
          <a href="items/<%= item.id %>" class="list-group-items">
            <h3><%= item.name %></h3>
            <article class="row">
              <div class="col-xs-5">
                <img class="middle" width=200px height=140px src="/images/<%= item.image_file %>"/>
              </div>
              <div class="col-xs-7">
                <dl class="dl-horizontal">
                  <dt>Maker:</dt>
                  <dd><%= item.brand %></dd>
                  <dt>Price:</dt>
                  <dd>$<%= item.price %></dd>
                  <dt>Length:</dt><dd><%= item.length %>'</dd>
                </dl>
              </div>
            </article>
          </a>
        </div>
      <% end %> 
    </div>
  </div>
</section>
  