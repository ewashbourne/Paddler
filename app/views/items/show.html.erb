<section class="container-fluid item">
  <div class="row">
    <h2 class="text-center"><%= @item.name %></h2>
    <div class="item-details col-md-4 col-md-offset-2">
      <dl class="dl-horizontal-2">
        <dt>Brand:</dt>
        <dd><%= @item.brand %></dd>
        <dt>Price:</dt>
        <dd>$<%= @item.price %></dd>
        <dt>Length:</dt>
        <dd><%= @item.length %> / 5</dd>
        <dt>Description:</dt>
        <dd><%= @item.description %></dd>
      </dl>
      <a href="/items">Back</a>
    </div>
    <div class="col-md-4 item-image">
      <img class="middle" width=300px height=220px src="/images/<%= @item.image_file %>"/>
    </div>
  </div>
</section>